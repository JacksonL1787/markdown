@font-face
 font-family: "Poppins";
 font-style: normal;
 font-weight: 500;
 src: url("chrome-extension://__MSG_@@extension_id__/src/fonts/Poppins-Regular.ttf");

@font-face
 font-family: "Poppins";
 font-style: normal;
 font-weight: 700;
 src: url("chrome-extension://__MSG_@@extension_id__/src/fonts/Poppins-Bold.ttf");


.markdown-similar-item-notification
  all initial
  background #00CA72
  padding 12px 0
  width 100%
  position fixed
  top 0
  left 0
  z-index 10000000000000
  font-family 'Poppins', sans-serif !important
  box-shadow 0 0 12px 4px rgba(0,0,0,0.1)
  animation markdownNotificationSlideIn .5s
  &.slide-out
    animation markdownNotificationSlideOut .5s
  .markdown-logo
    background-image url('https://i.ibb.co/LJMB72D/green-markdown-logo900.png')
    background-size cover
    background-position center
    background-repeat no-repeat
    width 25px
    height 25px
    z-index 1000000000000000000
    position absolute
    top 50%
    left 10px
    transform translateY(-50%)
  .markdown-notification-msg
    color white
    margin 0
    text-align center
    font-size 15.5px
    span
      font-weight 700
      text-decoration underline
  .markdown-close-btn
    background-image url('https://i.ibb.co/cw9hrmS/close.png')
    background-size cover
    background-position center
    background-repeat no-repeat
    width 20px
    height 20px
    z-index 1000000000000000000
    position absolute
    top 50%
    cursor pointer
    right 10px
    transform translateY(-50%)

@keyframes markdownNotificationSlideIn
  0%
    top -100px
  100%
    top 0

@keyframes markdownNotificationSlideOut
  0%
    top 0
  100%
    top -100px

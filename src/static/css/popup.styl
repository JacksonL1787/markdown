@import url("https://use.typekit.net/jft6rmf.css");

body
	width 360px
	height 600px
	background #221F2E
	font-family poppins, sans-serif !important
	overflow-y hidden
	overflow-x hidden
	position relative
	margin 0

h1,
h2,
h3,
h4,
p,
span,
a
	margin 0

#logo-container
	background-image url("../img/header-bg.svg")
	background-size cover
	background-repeat no-repeat
	background-position center
	width 100%
	position relative
	height 100px
	display flex
	justify-content center
	.logo
		background-image url("../img/white-logo.png")
		background-size cover
		background-repeat no-repeat
		background-position center
		width 30px
		height 30px
		margin-top 22px
	h1
		color white
		font-size 22px
		letter-spacing .5px
		font-weight 600
		margin 22px 0 0 12px
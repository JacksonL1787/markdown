@import url("https://use.typekit.net/jft6rmf.css");

body
	width 360px
	height 600px
	background #221F2E
	font-family poppins, sans-serif !important
	overflow hidden
	position relative
	margin 0
	&.nav-active
		#nav
			top -10%
		#header-bg
			top 100%
	&.favorites-page-active
		#nav
			top -110%
		#header-bg
			top -110px
		#header-container
			transform translateY(-100px)
		.favorites-container
			z-index 2
		.similar-items-container
			left -100%

h1,
h2,
h3,
h4,
p,
span,
a
	margin 0

#nav
	height 110%
	width 100%
	position fixed
	top -110%
	left 0
	background linear-gradient(90deg, #EE7DC8, #6A46F4)
	z-index 200
	transition top .4s cubic-bezier(0.34, 1.26, 0.64, 1)
	.nav-items
		margin calc(10% + 150px) auto 0
		width fit-content
		text-align center
		.nav-item
			color white
			opacity 0.6
			font-weight 600
			font-size 30px
			letter-spacing .5px
			text-decoration none
			cursor pointer
			text-transform uppercase
			margin-bottom 30px
			position relative
			padding 3px 10px
			transition opacity .2s
			&:hover
				opacity 1
				&::before
					height 100%
					transition height .2s cubic-bezier(0.34, 1.56, 0.64, 1)
			&:last-child
				margin-bottom 0 !important
			&::before
				content ""
				position absolute
				height 0
				width 100%
				bottom 0
				left 0
				background linear-gradient(360deg, rgba(255,255,255,0.1), rgba(255,255,255,0.3))
				transition height .2s

#header-bg
	background-image url("../img/header-bg.svg")
	background-size cover
	background-repeat no-repeat
	background-position center
	width 100%
	height 110px
	position fixed
	top -10px
	left 0
	transition top .4s cubic-bezier(0.34, 1.26, 0.64, 1)

#header-container
	width 100%
	position relative
	height 100px
	z-index 300
	transition transform .4s cubic-bezier(0.34, 1.26, 0.64, 1)
	.flex-wrap
		display flex
		justify-content space-between
		align-items center
		width calc(100% - 30px)
		margin 0 auto
		padding-top 25px
	.logo-container
		display flex
		justify-content center
		align-items center
		.logo
			background-image url("../img/white-logo.png")
			background-size cover
			background-repeat no-repeat
			background-position center
			width 29px
			height 29px
		h1
			color white
			font-size 22px
			letter-spacing .5px
			font-weight 600
			margin-left 12px
	.menu-btn
		cursor pointer
		outline none
		padding 0
		opacity 1 !important
		&.is-active
			.hamburger-inner::after
				transform translate3d(0, -14px, 0) rotate(-270deg)
		.hamburger-box
			width 25px
			height 17px
			.hamburger-inner
				top 0
				&.hamburger-inner,
				&::before,
				&::after
					background white
					height 3px
					width 25px
				&::before
					top 7px
				&::after
					top 14px
		.bar
			width 25px
			height 3px
			background white
			margin-bottom 4px
			border-radius 2px

.similar-items-container
	width 100%
	height calc(100% - 100px)
	position absolute
	top 100px
	left 0

.favorites-container
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index -1
	.favorites-header
		width calc(100% - 20px)
		padding-top 10px
		margin 0 auto
		display flex
		align-items center
		justify-content space-between
		.header-title
			color #dbc1f9
			font-size 30px
			letter-spacing .5px
			font-weight 700
		.back-btn
			position relative
			display flex
			justify-content center
			align-items center
			width 100px
			height 35px
			box-shadow 0 0 0 2px #3a374e
			border-top none !important
			border-left none !important
			background #16141E
			cursor pointer
			transition box-shadow .3s
			&:hover
				box-shadow none
				&::before
					opacity 1
			&::before
				content ""
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				width 100%
				opacity 0
				height 100%
				background linear-gradient(135deg, #EE7DC8, #6A46F4)
				z-index -1
				padding 2px
				transition opacity .3s
			.icon
				background-image url("../img/back.svg")
				background-size cover
				background-repeat no-repeat
				background-position center
				width 16px
				height 15px
				margin-right 10px
			.value
				letter-spacing .3px
				color white
				font-weight 500
				font-size 15px
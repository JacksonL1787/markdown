@import url("https://use.typekit.net/jft6rmf.css");

body
  width 360px
  height 600px
  background white
  font-family poppins, sans-serif !important
  overflow-y hidden
  overflow-x hidden
  position relative
  margin 0

#main
  overflow-y auto
  height 600px
  width 360px

.header
  background #ececec
  height 60px
  width 100%
  .header-content
    position relative
    width calc(100% - 40px)
    margin 0 auto
    height 100%
    h1.header-title
      color #333
      margin 0
      font-size 17px
      position absolute
      top 50%
      left 0
      letter-spacing 0.3px
      transform translateY(-50%)
    .nav-wrap
      display flex
      justify-content center
      align-items center
      width fit-content
      position absolute
      top 50%
      right -10px
      transform translateY(-50%)
      .nav-item
        margin 0 10px
        position relative
        &.active
          .icon
            opacity 0.8 !important
        &.nav-favorites .icon
          background-image url('../img/navIcons/favorite-icon.svg')
          margin-top -2px
        &.nav-stores .icon
          background-image url('../img/navIcons/stores-icon.svg')
          margin-top -1px
        &.nav-similar-clothing
          margin 0 8px
          .clothes-active
            background rgb(23, 173, 115)
            width 7px
            height 7px
            border-radius 5px
            position absolute
            top -3px
            right -3px
            z-index 2
            display none
          .icon
            background-image url('../img/navIcons/similar-clothing-icon.svg')
        &.nav-info
          margin-left 5px !important
          .icon
            background-image url('../img/navIcons/info-icon.svg')
            margin-top -2px
            width 19px !important
            height 19px !important
        .icon
          background-position center
          background-repeat no-repeat
          background-size cover
          width 20px
          height 20px
          opacity 0.3
          cursor pointer
          transition opacity .3s
          &:hover
            opacity 0.8

.loader
  position absolute
  top 0
  left 0
  width 100%
  height 2px
  background rgb(27, 189, 126)
  overflow hidden
  display none
  .loader-runner
    position absolute
    width 500px
    height 100%
    top 0
    background linear-gradient(0.25turn, rgba(255,255,255,0.05), rgb(107, 228, 180), rgba(255,255,255,0.05))
    animation load infinite 1s

@keyframes load
  0%
    left -400px
    opacity 0
  10%
    opacity 1
  90%
    opacity 1
  100%
    left 100%
    opacty 0

.container
  display none
  width 100%
  position relative
  padding-top 10px
  &.active
    display block
  &.active-loader
    .loader
      display block
  h1.container-title
    color #333
    text-align center
    margin 0 0 30px
    font-size 20px
    font-weight 500

.clothing-content
  .product
    margin 0 auto 50px
    width fit-content
    h2.store-name
      color rgb(167, 167, 167)
      text-align center
      font-weight 300
      margin 0 0 3px
      font-size 12.5px
      text-transform uppercase
    .product-img-wrap
      max-width 220px
      position relative
      cursor pointer
      height fit-content
      margin 0 auto 10px
      overflow hidden
      border-radius .2em
      &:hover
        .img-darken-overlay
          background rgba(0,0,20,0.15)
        .favorite-btn
          visibility visible
          opacity 1
          bottom 20px
      img
        width 100%
      .img-darken-overlay
        position absolute
        z-index 1
        top 0
        left 0
        width 100%
        height calc(100% - 5px)
        background rgba(0,0,30,0.05)
        transition background .3s
      .favorited-tag
        position absolute
        top 30px
        left -60px
        width 60px
        padding 3px 0 2px
        z-index 2
        background rgb(26, 176, 117)
        overflow hidden
        transition left .3s
        &.active
          left 0
        p
          color white
          margin 0
          text-align center
          font-size 9px
          letter-spacing 0.3px
          text-transform uppercase
      .favorite-btn
        width 40px
        height 40px
        z-index 2
        position absolute
        left 50%
        transform translateX(-50%)
        border-radius 40px
        cursor pointer
        visibility hidden
        opacity 0
        bottom 10px
        transition background .3s, bottom .4s, opacity .3s, visibility .3s
        .icon
          background-position center
          background-repeat no-repeat
          background-size cover
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
    .product-desc
      text-align center
      a.product-title
        margin 0
        font-weight 300
        font-size 14.5px
        max-width 400px
        line-height 130%
        letter-spacing 0.4px
        color #2c2c37
        cursor pointer
        text-decoration none
      .price-wrap
        display flex
        justify-content center
        align-items center
        width fit-content
        margin 5px auto 7.5px
        .price
          font-weight 600
          margin 0
          font-size 14px
          letter-spacing 0.2px
          color #24242d
          &.strikethrough
            color #a2a2a2
            text-decoration line-through
        .sale-price
          margin 0 0 0 30px
          font-weight 700
          color #21212a
          font-size 14px
          letter-spacing 0.2px

.similar-clothing-container,
.favorites-container
  .content
    width calc(100% - 40px)
    margin 0 auto
  .container-msg
    width 300px
    margin 50px auto 0
    text-align center
    &.no-favorites
      width 225px
      .logo
        background-image url('../img/empty-icon.svg')
      .desc
        img
          background rgb(30, 36, 48)
          width 10px
          height 14px
          padding 5px 7px
          border-radius 20000px
          margin 0 2px
    &.go-to-product-page
      .logo
        background-image url('../img/go-to-product-icon.svg')
    &.loading-products
      .logo
        background-image url('../img/loading-icon.svg')
    &.not-store-page
      .logo
        background-image url('../img/store-icon.svg')
    &.no-similar-clothing
      .logo
        background-image url('../img/search-icon.svg')
    &.not-store-page
      .all-stores-link
        color rgb(27, 189, 126)
        text-decoration none
        cursor pointer
        font-size 14px
        margin-top 10px
        display block
        &:hover
          text-decoration underline
    .logo
      background-image url('../img/go-to-product-icon.svg')
      background-size cover
      background-position center
      background-repeat no-repeat
      width 100px
      height 100px
      margin 0 auto 20px
      opacity 0.1
    .title
      color #333
      font-size 16px
      font-weight 500
      letter-spacing 0.3px
      margin 0 0 5px
    .desc
      color grey
      margin 0
      font-size 13px
  .back-to-top-btn
    width 100%
    height 45px
    z-index 5
    position fixed
    top -45px
    left 0
    background rgb(30, 36, 48)
    cursor pointer
    overflow hidden
    transition background .3s, top .2s
    &.active
      top 0
    &:hover
      background rgb(42, 50, 65)
    p
      color white
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      margin 0
      font-size 14px
      font-weight 600
      letter-spacing 0.3px

.favorites-container
  .clothing-content
    .darken-overlay
      opacity 0 !important
    .favorite-btn
      visibility visible !important
      opacity 1 !important
      bottom 20px !important
      transition background .3s !important
      &:hover
        background rgb(212, 22, 22) !important
      &.active
        background rgb(30, 36, 48)
      .icon
        background-image url('../img/removed.svg')
        width 16px
        height 16px

.similar-clothing-container,
.favorites-container
  .container-msg
    display none
    &.show
      display block

.similar-clothing-container
  .sort-by-container
    display flex
    justify-content center
    align-items center
    width 100%
    margin -20px auto 40px
    position relative
    .sort-option
      color #9f9f9f
      font-size 13px
      text-transform uppercase
      margin 0 10px
      cursor pointer
      font-weight 600
      letter-spacing 0.3px
      position relative
      transition color .3s
      &.active
        color #1bbd7e !important
        &::before
          height 2px !important
      &:hover
        color #1bbd7e
      &::before
        content ""
        position absolute
        left calc(50% - 0.5px)
        transform translateX(-50%)
        bottom 1px
        width 100%
        height 0
        background #1bbd7e
        transition height .3s

  .clothing-content
    .favorite-btn
      background rgb(30, 36, 48)
      &:hover,
      &.active
        background rgb(27, 189, 126)
      .icon
        background-image url('../img/white-favorite-icon.svg')
        width 18px
        height 18px

.stores-container
  .container-title
    margin-bottom 10px !important
  .search-bar-wrap
    width fit-content
    margin 0 auto
    position relative
    height fit-content
    .search-icon
      background-image url('../img/search-icon.svg')
      background-size cover
      background-position center
      background-repeat no-repeat
      opacity 0.4
      width 17px
      height 17px
      position absolute
      top calc(50% - 7px)
      left 9px
      transform translateY(-50%)
    .search-bar-inpt
      width 200px
      padding 8px 0 8px 35px
      outline none
      border none
      background rgb(227, 227, 227)
      color #333
      border-radius .3em
      font-size 14px
      margin-bottom 15px
  .content
    .no-stores-found
      max-width 90%
      word-break break-word
      font-size 14px
      color rgb(152, 152, 152)
      text-align center
      margin 20px auto
      display block
    .stores-list
      .divider
        height 1px
        width 90%
        margin 0 auto
        background rgb(225, 233, 238)
      .store-wrap
        width 90%
        cursor pointer
        height 75px
        margin 0 auto
        display flex
        justify-content left
        align-items center
        .logo
          width 60px
          margin-right 20px
        .store-name
          color #333
          font-weight 400
          margin 0
          letter-spacing 0.3px
          font-size 16px

.info-container
  .container-title
    margin-bottom 5px !important
  .container-description
    margin 0 auto
    text-align center
    color rgb(162, 162, 162)
    font-size 12px
    line-height 130%
    width 92%
  .info-content
    width 92%
    margin 20px auto 0
    .section-wrap
      margin-bottom 20px
      .section-title
        color #4d4d4d
        font-weight 500
        font-size 17.5px
        text-align center
        margin 0 0 20px
      &.navigation
        .flex-wrap
          display flex
          justify-content center
          align-items center
        .nav-icon-wrap
          margin-bottom 20px
          width 50%
          &.stores-nav .icon
            background-image url('../img/navIcons/green-stores-icon.svg')
          &.similar-clothing-nav .icon
            background-image url('../img/navIcons/green-similar-clothing-icon.svg')
          &.favorites-nav .icon
            background-image url('../img/navIcons/green-favorite-icon.svg')
          &.info-nav
            .icon
              background-image url('../img/navIcons/green-info-icon.svg')
          .icon
            background-repeat no-repeat
            background-size cover
            background-position center
            width 35px
            height 35px
            margin 0 auto 5px
            opacity 0.8
          .nav-description
            margin 0
            font-size 12px
            color rgb(152, 152, 152)
            text-align center


.favorite-message-wrap
  position fixed
  padding-right 15px
  height 30px
  width fit-content
  border-radius .3em
  z-index 5
  opacity 0
  visibility hidden
  bottom 5px
  left 50%
  transform translateX(-50%)
  display flex
  justify-content left
  align-items center
  overflow hidden
  transition opacity .25s, visibility .25s, bottom .3s
  &.green
    background rgb(24, 176, 117)
    .icon-wrap
      .icon
        background-image url('../img/checkmark.svg')
  &.red
    background rgb(212, 30, 30)
    .icon-wrap
      background rgba(0,0,0,0.15)
      .icon
        width 12.5px !important
        height 12.5px !important
        top 50% !important
        left 50% !important
        background-image url('../img/removed.svg')
  &.active
    opacity 1
    visibility visible
    bottom 20px
  .icon-wrap
    background rgba(0,0,0,0.1)
    height 100%
    width 30px
    position relative
    margin-right 10px
    .icon
      background-size cover
      background-position center
      background-repeat no-repeat
      width 16px
      height 18px
      position absolute
      top calc(50% + 1.5px)
      left calc(50% + 1px)
      transform translate(-50%, -50%)
  p.msg
    color white
    margin 0
    font-size 12px
    width fit-content
    font-weight 600
